<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsAct">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:contentPadding="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/darkmode"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"
                    android:background="@drawable/bg_gradient_primary_blue"
                    />



                <ImageView
                    android:id="@+id/img_app_logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:src="@drawable/geopark_logo" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">





                    <TextView
                        android:id="@+id/txt_rate_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/bg_gradient_primary_blue"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:textColor="@color/fontColor"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:text="@string/rate_us"
                        android:textSize="14sp"
                        tools:ignore="RelativeOverlap" />


                    <TextView
                        android:id="@+id/txt_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/bg_btn_plus_blue"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/fontColor"
                        android:padding="10dp"
                        android:paddingEnd="13dp"
                        android:paddingStart="10dp"
                        android:text="Share"
                        android:textSize="14sp"
                        tools:ignore="RelativeOverlap" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="15dp"
                        android:background="@color/blueSecondary" />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_powered_by"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_powered_by"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/txt_powered_by_title"
                        android:layout_marginEnd="5dp"
                        android:padding="5dp"
                        android:src="@drawable/dev" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_powered_by_title"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/img_powered_by"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txt_powered_by_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/name"
                            android:textColor="@color/fontColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_powered_by_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_bold"
                            android:maxLines="7"
                            android:text="@string/tugas"
                            android:textColor="@color/fontColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_powered_by_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:autoLink="web"
                            android:ellipsize="end"
                            android:textColor="@color/fontColor"
                            android:linksClickable="true"
                            android:maxLines="2"
                            android:fontFamily="@font/roboto_bold"
                            android:text="BINUS UNIVERSITY"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_powered_by_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line_1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/fontColor"
                        android:text="Powered By"
                        android:textSize="14sp" />


                    <View
                        android:id="@+id/view_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/cardview_light_background" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_powered_by2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_powered_by2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/txt_powered_by_title2"
                        android:layout_marginEnd="5dp"
                        android:padding="5dp"
                        android:src="@drawable/dev" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_powered_by_title2"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/img_powered_by2"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txt_powered_by_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/fontColor"
                            android:text="@string/name"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_powered_by_about2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_bold"
                            android:maxLines="7"
                            android:text="@string/tugas"
                            android:textSize="12sp"
                            android:textColor="@color/fontColor"
                            />

                        <TextView
                            android:id="@+id/txt_powered_by_link2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:autoLink="web"
                            android:ellipsize="end"
                            android:linksClickable="true"
                            android:maxLines="2"
                            android:textColor="@color/fontColor"
                            android:fontFamily="@font/roboto_bold"
                            android:text="BINUS UNIVERSITY"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_powered_by_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line_2"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:text=""
                        android:textSize="14sp" />


                    <View
                        android:id="@+id/view_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/cardview_light_background" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_powered_by3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_powered_by3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/txt_powered_by_title3"
                        android:layout_marginEnd="5dp"
                        android:padding="5dp"
                        android:src="@drawable/pp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_powered_by_title3"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/img_powered_by3"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txt_powered_by_name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Aldri Immanuel Ramos"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/txt_powered_by_about3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_bold"
                            android:maxLines="7"
                            android:textColor="@color/white"
                            android:text="@string/tugas"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_powered_by_link3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:autoLink="web"
                            android:ellipsize="end"
                            android:linksClickable="true"
                            android:maxLines="2"
                            android:fontFamily="@font/roboto_bold"
                            android:text="BINUS UNIVERSITY"
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_powered_by_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line_3"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:text=""
                        android:textSize="14sp" />


                    <View
                        android:id="@+id/view_line_3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/cardview_light_background" />

                </RelativeLayout>


                <Button
                    android:id="@+id/about_app"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_gradient_primary_blue"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:text="MORE ABOUT OUR APPS"
                    android:textSize="12sp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>