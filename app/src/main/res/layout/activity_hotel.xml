<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bgPrimary"
    tools:context=".HotelAct">

    <LinearLayout
        android:id="@+id/btn_back_hotel"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_gradient_primary_blue"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_primary_blue"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Hotel"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/fontColor"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/fontColor"
            android:background="@drawable/bg_gradient_primary_blue"
            android:text="Kenyamanan dan keamanan dalam memilih tempat tinggal bagi wisatawan merupakan salah satu faktor
yang menentukan keputusan untuk melakukan suatu perjalanan ke suatu destinasi pariwisata."
            android:textStyle="bold"
            android:textSize="13sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:padding="10dp"
        android:background="@drawable/bg_gradient_primary_blue"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/science_of_where"
            android:layout_gravity="left"
            android:background="@drawable/bg_gradient_primary_blue"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ciletuh"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="italic"/>

    </LinearLayout>

</LinearLayout>